<main>
    <h1>{{make}} {{model}}</h1>

    <div><b>Year:</b> {{year}} | <b>Color:</b> {{color}}</div>
    <br>
    <hr>

    <h2>Features</h2>
    {{#with features}}
    <ul>
        <li>
            <h3><u>Interior</u></h3>
            {{#with interior}}
            <ul>
                <li>
                    <h4><em>Seats</em></h4>
                    {{#with seats}}
                    <ul>
                        <li>Material: {{material}}</li>
                        <li>Color: {{color}}</li>
                        <li>Heated: {{#if heated}} Yes {{else}} No {{/if}}</li>
                        <li>Ventilated: {{#if ventilated}} Yes {{else}} No {{/if}}</li>
                    </ul>
                    {{/with}}
                    <br>
                <li>
                    <h4><em>Dashboard</em></h4>
                    {{#with dashboard}}
                    <ul>
                        <li>Material: {{material}}</li>
                        <li>Color: {{color}}</li>
                        <li>
                            <p>Display:</p>
                            {{#with display}}
                            <ul>
                                <li>Type: {{type}}</li>
                                <li>Size: {{size}}</li>
                                <li>Resolution: {{resolution}}</li>
                                <li>Touchscreen: {{#if touchscreen}} Yes {{else}} No {{/if}}</li>
                            </ul>
                            {{/with}}
                        </li>
                    </ul>
                    {{/with}}
                    <br>
                <li>
                    <h4><em>Audio</em></h4>
                    {{#with audio}}
                    <ul>
                        <li>System: {{system}}</li>
                        <li>Speakers: {{speakers}}</li>
                        <li>Subwoofer: {{#if subwoofer}} Yes {{else}} No {{/if}}</li>
                        <li>Bluetooth: {{#if bluetooth}} Yes {{else}} No {{/if}}</li>
                        <li>USB: {{#if USB}} Yes {{else}} No {{/if}}</li>
                    </ul>
                    {{/with}}
                </li>
            </ul>
            {{/with}}
            <br>
        <li>
            <h3><u>Exterior</u></h3>
            {{#with exterior}}
            <ul>
                <li>
                    <h4><em>Wheels</em></h4>
                    {{#with wheels}}
                    <ul>
                        <li>Size: {{size}}</li>
                        <li>Type: {{type}}</li>
                        <li>Color: {{color}}</li>
                    </ul>
                    {{/with}}
                    <br>
                <li>
                    <h4><em>Headlights</em></h4>
                    {{#with headlights}}
                    <ul>
                        <li>Type: {{type}}</li>
                        <li>Brightness: {{brightness}}</li>
                        <li>Automatic: {{#if automatic}} Yes {{else}} No {{/if}}</li>
                    </ul>
                    {{/with}}
                    <br>
                <li>
                    <h4><em>Sunroof</em></h4>
                    {{#with sunroof}}
                    <ul>
                        <li>Type: {{type}}</li>
                        <li>Size: {{size}}</li>
                        <li>Automatic: {{#if automatic}} Yes {{else}} No {{/if}}</li>
                    </ul>
                    {{/with}}
                </li>
            </ul>
            {{/with}}
            <br>
        <li>
            <h3><u>Safety</u></h3>
            {{#with safety}}
            <ul>
                <li>
                    <h4><em>Airbags</em></h4>
                    {{#with airbags}}
                    <ul>
                        <li>Front: {{front}}</li>
                        <li>Side: {{side}}</li>
                        <li>Knee: {{knee}}</li>
                        <li>Rear: {{rear}}</li>
                    </ul>
                    {{/with}}
                    <br>
                <li>
                    <h4><em>Assistance</em></h4>
                    {{#with assistance}}
                    <ul>
                        <li>Blind spot monitoring: {{#if blind_spot_monitoring}} Yes {{else}} No {{/if}}</li>
                        <li>Rear cross traffic alert: {{#if rear_cross_traffic_alert}} Yes {{else}} No {{/if}}</li>
                        <li>Lane departure warning: {{#if lane_departure_warning}} Yes {{else}} No {{/if}}</li>
                        <li>Adaptive cruise control: {{#if adaptive_cruise_control}} Yes {{else}} No {{/if}}</li>
                        <li>Collision warning: {{#if collision_warning}} Yes {{else}} No {{/if}}</li>
                    </ul>
                    {{/with}}
                </li>
            </ul>
            {{/with}}
        </li>
    </ul>
    {{/with}}

    <hr>

    <h2>Engine</h2>
    {{#with engine}}
    <ul>
        <li>Type: {{type}}</li>
        <li>Displacement: {{displacement}}</li>
        <li>Horsepower: {{horsepower}}</li>
        <li>Torque: {{torque}}</li>
        <br>
        <h3><u>Transmission</u></h3>
        {{#with transmission}}
        <ul>
            <li>Type: {{type}}</li>
            <li>Gears: {{gears}}</li>
        </ul>
        {{/with}}
    </ul>
    {{/with}}

    <hr>

    <h2>Fuel economy</h2>
    {{#with fuel_economy}}
    <ul>
        <li>City: {{city}}</li>
        <li>Highway: {{highway}}</li>
        <li>Combined: {{combined}}</li>
    </ul>
    {{/with}}

    <hr>

    <h2>Price</h2>
    {{#with price}}
    <ul>
        <li>Base: {{base}}</li>
        <li>Destination: {{destination}}</li>
        <br>
        <h3><u>Options</u></h3>
        {{#with options}}
        <ul>
            <li>Navigation: {{navigation}}</li>
            <li>Moonroof: {{moonroof}}</li>
            <li>Premium_paint: {{premium_paint}}</li>
        </ul>
        {{/with}}
        <br>
        <li>Total: {{total}}</li>
    </ul>
    {{/with}}
</main>