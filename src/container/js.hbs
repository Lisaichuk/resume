<header>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
</header>

<main>
    <h3><i>History</i></h3>
    {{#with history}}
    <ul>
        <li>Year: {{year}}</li>
        <li>Founder: {{founder}}</li>
    </ul>
    {{/with}}

    <h3><i>Types</i></h3>
    <ul>
        {{#each types}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <h3><i>Syntax</i></h3>
    {{#with syntax}}
    <ul>
        <li>Variables: {{variables}}</li>
        <li>Functions: {{functions}}</li>
        <li>Conditionals: {{conditionals}}</li>
        <li>Loops: {{loops}}</li>
        <li>Classes: {{classes}}</li>
    </ul>
    {{/with}}

    <h3><i>Features</i></h3>
    <ul>
        {{#each features}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <h3><i>Libraries</i></h3>
    <ul>
        {{#each libraries}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <h3><i>Tools</i></h3>
    <ul>
        {{#each tools}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <h3><i>Community</i></h3>
    <ul>
        {{#each community}}
        <li>{{name}} ({{type}})</li>
        {{/each}}
    </ul>
</main>