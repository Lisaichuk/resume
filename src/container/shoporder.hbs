<main>
    <h1 class="my-5">{{header}}</h1>

    <div class="row">

        <div class="col-8">

            {{#with contacts_data}}
            <section>
                <h2 class="mb-3">{{title}}</h2>

                {{#each buttons}}
                {{#if isPrimary}} <button class="btn btn-warning text-light me-2">{{text}}</button> {{/if}}
                {{#if isOutline}} <button class="btn btn-outline-warning">{{text}}</button> {{/if}}
                {{/each}}


                <div class="row mt-3">
                    {{#with form}}

                    {{#each input}}
                    <div class="col-6 gy-2">
                        <lable class="form-label">{{lable}}</lable>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                    </div>
                    {{/each}}
                </div>

                <hr class="my-4">

                {{#each switch}}
                {{#if isActive}}
                <div class="form-check form-switch">
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input" checked>
                </div>
                {{else}}
                <div class="form-check form-switch mb-4">
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input">
                </div>
                {{/if}}
                {{/each}}

                {{/with}}
            </section>

            {{/with}}

            <hr class="my-4">

            <section>
                {{#with delivery}}
                <h2 class="mb-3">{{title}}</h2>

                <div class="card mb-4">
                    <div class="card-body row">
                        {{#each select}}
                        <div class="col-6">
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="form-check row d-flex">
                    {{#each delivery_type}}
                    <div class="col-6">
                        <label class="form-check-label">{{type}}</label>
                        <input type="radio" name="delivery_type" class="form-check-input">
                    </div>
                    <div class="col-6 text-end">{{value}}</div>
                    {{/each}}
                </div>
            </section>

            <hr class="my-4">

            <section>
                <h2 class="mb-3">Оплата</h2>

                <div class="form-check row">
                    {{#each payment}}
                    <div class="col-12">
                        <label class="form-check-label">{{type}}</label>
                        <input type="radio" name="payment" class="form-check-input">
                        {{#if description}} <p>{{description}}</p> {{/if}}
                    </div>
                    {{/each}}
                </div>
            </section>

            <hr class="my-4">

            <section>
                <h2 class="mb-3">Контактні дані отримувача</h2>

                <div class="row mt-3">
                    {{#with contact}}
                    {{#each this}}
                    <div class="col-6 gy-2">
                        <lable class="form-label">{{lable}}</lable>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </section>

            <hr class="my-4">

            <section>
                <div class="row gx-2">
                    {{#with coment}}
                    <lable class="form-label">{{lable}}</lable>
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                </div>
            </section>

            <hr class="my-4">

            {{/with}}

            <section>
                {{#with coupon}}
                <h2 class="mb-3">Купони</h2>
                {{#with select}}

                <div class="row gx-2 my-1">
                    {{#with available_coupon}}
                    <label class="form-label">{{lable}}</label>
                    <select class="form-select form-select-lg">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    {{/with}}
                </div>

                <div class="row gx-2 my-1">
                    {{#with friend_coupon}}
                    <label class="form-label">{{lable}}</label>
                    <select class="form-select form-select-sm">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    {{/with}}
                </div>

                {{/with}}

                {{#with add}}

                {{#with friend}}
                <div class="col-12 gy-2">
                    <lable class="form-label">{{lable}}</lable>
                    <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}

                {{#with colleague}}
                <div class="col-12 gy-2">
                    <lable class="form-label">{{lable}}</lable>
                    <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}

                {{/with}}

                {{/with}}
            </section>

            <hr class="my-4">

            <section>
                {{#with quiz}}
                <h2 class="mb-3">{{title}}</h2>

                {{!-- <div class="form-check row d-flex">
                    {{#each delivery_type}}
                    <div class="col-6">
                        <label class="form-check-label">{{type}}</label>
                        <input type="radio" name="delivery_type" class="form-check-input">
                    </div>
                    <div class="col-6 text-end">{{value}}</div>
                    {{/each}}
                </div> --}}

                {{#with preference}}
                <div class="form-check row g-0 mb-3">
                    <div class="form-label">{{title}}</div>
                    {{#each options}}
                    <label class="form-check-label">{{this}}</label>
                    <input type="radio" name="options" class="form-check-input">
                    {{/each}}
                </div>
                {{/with}}

                {{#with your_expirience}}
                <div class="col-12 g-2 mb-3">
                    <lable class="form-label">{{label}}</lable>
                    <input class="form-control">
                </div>
                {{/with}}

                {{#with purchase_frequency}}
                <div class="row g-2 mb-3">
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                </div>
                {{/with}}

                {{#with factors}}
                <div class="form-check row g-0">
                    <div class="form-label">{{title}}</div>
                    {{#each options}}
                    <label class="form-check-label">{{this}}</label>
                    <input type="checkbox" name="options" class="form-check-input">
                    {{/each}}
                </div>
                {{/with}}

                {{/with}}
            </section>

            <hr class="mt-5">

        </div>

        <div class="col-4">

            <div class="card mb-4">
                <div class="card-body">
                    {{#each action_block}}
                    {{#if isPrimary}} <button class="btn d-flex btn-success">{{text}}</button>{{/if}}
                    {{#if isDanger}} <button class="btn d-flex btn-danger my-2">{{text}}</button>{{/if}}
                    {{#if isInfo}} <button class="btn d-flex btn-info">{{text}}</button>{{/if}}
                    {{/each}}
                </div>
            </div>

            <div class="card">
                {{#with total}}
                <div class="card-body">
                    <h2>{{title}}</h2>

                    {{#each item_list}}
                    <div>{{name}}: {{price}}</div>
                    {{/each}}

                    <hr class="g-1">

                    {{#each additional_info}}
                    <div>{{text}}: {{value}}</div>
                    {{/each}}

                    <hr class="g-1">

                    {{#with total_price}}
                    <div>{{text}}: {{value}}</div>
                    {{/with}}

                    <hr class="g-1">

                    {{#each button}}
                    {{#if isPrimary}} <button class="btn btn-primary mb-3">{{text}}</button> {{/if}}
                    {{#if isOutline}} <button class="btn btn-outline-primary">{{text}}</button> {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>

        </div>

    </div>
</main>