{{#with person}}
<header>
    <div class="text-center">
        <h1>{{name}}</h1>
    </div>

    <div class="mb-3"><a>Age: {{age}}</a></div>

    <div class="mb-3"><a>Gender: {{gender}}</a></div>

    <address>{{address.street}}, {{address.city}}, {{address.state}}, {{address.zip}}, {{address.country}}</address>

    <hr class="my-4">
</header>

<main>
    <section>
        <div>
            <h2>Education</h2>
        </div>

        <ul>
            {{#each education}}
            <li>
                {{degree}} in {{major}} from {{university}}, {{graduationYear}}
            </li>
            {{/each}}
        </ul>
    </section>
    <hr class="my-4">
    <section>
        <div>
            <h2>Work Experience</h2>
        </div>
        <div>
            <ul>
                {{#each workExperience}}
                <li>
                    <div>{{title}}</div>
                    <div>{{company}} ({{year_founded}}), {{industry}}</div>
                    <div class="mb-3">({{startDate}}) - ({{endDate}})</div>

                    <div>
                        <h3>Responsibilities</h3>
                    </div>
                    <div class="mb-3">
                        <ul>
                            {{#each responsibilities}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>

                    <div>
                        <h3>Employees</h3>
                    </div>
                    <div>
                        <ul>
                            {{#each employees}}
                            <li class="mb-3">{{name}}, {{position}}, {{department}}</li>

                            <div>
                                <h4>Projects</h4>
                            </div>
                            <ul>
                                {{#each projects}}
                                <li>
                                    <div>{{name}} ({{status}})</div>
                                    <div class="mb-3">
                                        <q>{{description}}</q>
                                    </div>

                                    <div>
                                        <h4>Teams</h4>
                                    </div>
                                    <ul>
                                        {{#each teams}}
                                        <li>
                                            <div class="mb-3">Team name: {{team_name}}</div>

                                            <div class="mb-3">
                                                {{#with team_leader}}{{title}}: {{name}}, {{email}}{{/with}}
                                            </div>

                                            <div>
                                                <div class="mb-2">
                                                    <b>Team members:</b>
                                                </div>

                                                <ul>
                                                    {{#each team_members}}
                                                    <li>
                                                        <div class="mb-3">{{title}}: {{name}}, {{email}}</div>

                                                        <div class="mb-3">
                                                            <em>Skills:</em>
                                                            <ul>
                                                                {{#each skills}}
                                                                <li>{{this}}</li>
                                                                {{/each}}
                                                            </ul>
                                                        </div>

                                                        <div>
                                                            <em>Progects:</em>
                                                            <ul>
                                                                {{#each projects}}
                                                                <li>
                                                                    <div>{{name}}</div>
                                                                    <div class="mb-3">
                                                                        <q>{{description}}</q>
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <a>Technologies:</a>
                                                                        <ul>
                                                                            {{#each technologies}}
                                                                            <li>{{this}}</li>
                                                                            {{/each}}
                                                                        </ul>
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <b>Team members:</b>
                                                                    </div>

                                                                    <div>
                                                                        <ul>
                                                                            {{#each team_members}}
                                                                            <li>
                                                                                <div>{{title}}: {{name}}</div>
                                                                            </li>
                                                                            {{/each}}
                                                                        </ul>
                                                                    </div>
                                                                </li>
                                                                {{/each}}
                                                            </ul>
                                                        </div>
                                                    </li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                            {{/each}}
                        </ul>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
</main>
{{/with}}