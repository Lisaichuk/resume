<main>
    <div class="row col-12">
        <h1 class="my-5">{{header}}</h1>

        {{#with purchase}}
        <nav class="nav nav-tabs mb-4">
            <ul class="d-flex list-unstyled">
                {{#each tabs}}
                <li>
                    <div class="nav-link {{#if @first}} active {{/if}}">{{this}}</div>
                </li>
                {{/each}}
            </ul>
        </nav>

        {{#with actionBlock}}
        <div class="col-12">
            {{#with input}}
            <input class="form control form-control-sm px-4" placeholder="{{placeholder}}">
            {{/with}}

            {{#each buttons}}
            {{#if isSuccess}} <a href="{{link}}" class="btn btn-success btn-sm ms-1">{{text}}</a> {{/if}}
            {{#if isOutline}} <a href="{{link}}" class="btn btn-outline-success btn-sm mx-1">{{text}}</a> {{/if}}
            {{#if isDanger}} <a href="{{link}}" class="btn btn-outline-danger btn-sm">{{text}}</a> {{/if}}

            {{/each}}
        </div>
        {{/with}}

        <hr class="my-4">

        <section>
            {{> purchaseItem}}
        </section>

        {{/with}}

        <hr class="my-5">

        <section>
            {{#with userInfo}}

            <h2 class="mb-5">{{title}}</h2>

            <div class="border p-2 my-2">
                {{#with profile}}
                <h3 class="mb-4">{{title}}</h3>

                <div class="row">

                    {{#each profileData}}
                    <div class="col-4">
                        <p class="mb-0">{{title}}</p>
                        <p class="fw-bold">{{value1}}</p>
                        <p class="mb-0">{{otherInfo}}</p>
                        <p class="fw-bold">{{value2}}</p>

                        {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary">{{text}}</a> {{/if}}
                        {{#if isSecondary}} <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a> {{/if}}
                        {{#if isDanger}} <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a> {{/if}}
                    </div>
                    {{/each}}

                </div>

                {{/with}}
            </div>

            <div class="border p-2 my-2">
                {{#with recipients}}
                <h3 class="mb-4">{{title}}</h3>

                <div class="row">

                    {{#each users}}
                    <div class="col-4">
                        <div class="fw-bold">{{name}}</div>
                        <p>{{phone}}</p>
                        {{#with button}}
                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                        {{/with}}
                    </div>
                    {{/each}}

                </div>

                {{/with}}
            </div>

            {{#with contacts}}
            <div class="border p-2 my-2">
                <h3 class="mb-4">{{title}}</h3>

                <div class="row">

                    {{#each contactData}}
                    <div class="col-4">
                        <div>{{title}}</div>
                        <p class="fw-bold">{{value}}</p>
                    </div>
                    {{/each}}

                    {{#each buttons}}
                    <div class="col-4">
                        {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary">{{text}}</a> {{/if}}
                        {{#if isSecondary}} <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                        {{/if}}
                        {{#if isDanger}} <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a> {{/if}}
                    </div>
                    {{/each}}
                </div>

            </div>
            {{/with}}

            {{/with}}
        </section>

        <hr class="mt-5">

    </div>
</main>