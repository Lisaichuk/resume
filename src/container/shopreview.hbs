<main>
    <div class="row col-12">

        {{#with formBlock}}
        <div class="col-9 mt-5">
            <h1>{{header}}</h1>

            {{#with rating}}
            <div class="ms-1 my-3">{{title}}: {{value}}</div>
            {{/with}}

            {{#with actionBlock}}
            <nav class="nav nav-tabs mx-2">
                {{#each tabs}}
                <a class="nav-link {{#if isActive}} active {{/if}} mx-3">{{text}}</a>
                {{/each}}
            </nav>

            <hr class="my-5">

            {{#with field}}
            <div class="border p-4">
                <div class="row col-12">
                    <div class="col-10">
                        <div class="mt-1">{{placeholder}}</div>
                    </div>
                    <div class="col-2">
                        {{#with button}}
                        <a href="{{link}}" class="btn btn-secondary ms-5">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}

            {{/with}}

            <hr class="my-5">

            {{#with feedbackBlock}}
            <h2 class="mb-5">{{title}}</h2>

            {{#each buttons}}
            {{#if isWarning}} <a href="{{link}}" class="btn btn-warning text-light">{{text}}</a> {{/if}}
            {{#if isDanger}} <a href="{{link}}" class="btn btn-danger text-light">{{text}}</a> {{/if}}
            {{#if isSuccess}} <a href="{{link}}" class="btn btn-success text-light mx-2">{{text}}</a> {{/if}}
            {{/each}}

            {{/with}}
        </div>

        <div class="col-3 mt-5">
            {{#with goodsInfo}}
            <div class="border p-3">
                <img src="{{photo}}">
                <div class="fw-bold my-1">{{name}}</div>
            </div>

            <div class="border p-3 mt-3">
                <div class="fw-bold">{{price}}</div>
                <p class="py-1">Є в наявності</p>

                {{#each buttons}}
                {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary text-light">{{text}}</a> {{/if}}
                {{#if isSecondary}} <a href="{{link}}" class="btn btn-secondary text-light my-2">{{text}}</a> {{/if}}
                {{/each}}
            </div>

            <div class="border p-3 mt-3">
                {{#with seller}}
                <div>{{title}}: <b>{{value}}</b></div>
                {{/with}}
            </div>
            {{/with}}
        </div>

        {{/with}}

        <hr class="my-5">

        {{> reviewItem}}

        {{> shopaction}}

        <hr class="mt-5">

    </div>
</main>