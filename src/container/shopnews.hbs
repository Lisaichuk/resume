<main>
    <section>
        {{>breadcrumb}}

        <div class="row col-12">

            {{#with newsData}}
            <img class="m-2" src="{{photo}}">

            {{#with head}}
            <h2 class="m-3">{{heading}}</h2>
            <p class="m-2">{{description}}</p>
            {{/with}}

            {{#each body}}
            <h4 class="m-3">{{title}}</h4>
            <p class="m-2">{{text}}</p>
            {{/each}}

            {{/with}}

        </div>
    </section>

    <hr class="my-5">

    <section>
        {{#with newsOtherBlock}}
        {{> shoppost}}
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{> shopaction}}
    </section>

    <hr class="my-5">

</main>