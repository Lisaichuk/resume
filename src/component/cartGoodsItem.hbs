{{#each goodsBlock}}
<div class="card p-2 my-4">
    <div class="col-12 d-flex">

        <div class="col-2">
            <img src="{{image}}">
        </div>

        <div class="col-5">
            <h3>{{name}}</h3>
            <span>{{description}}</span>
        </div>

        <div class="col-1 mx-5 mt-4">
            {{#with price}}
            <span>{{title}}:</span>
            <div><b>{{value}}</b></div>
            {{/with}}
        </div>

        <div class="col-1 mx-3 mt-5">{{amount}}</div>

        <div class="col-2">
            {{#each buttons}}
            {{#if isPrimary}} <button class="btn btn-primary mt-2 mb-3">{{text}}</button> {{/if}}
            {{#if isDanger}} <button class="btn btn-outline-danger">{{text}}</button> {{/if}}
            {{/each}}
        </div>

    </div>
</div>
{{/each}}